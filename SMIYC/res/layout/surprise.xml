<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".Main" >

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
     android:onClick="info"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#9fff" >

        <RelativeLayout
            android:id="@+id/like"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="like"
            android:text="Like"
            android:textSize="40px" >

            <Button
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_centerInParent="true"
                android:background="@drawable/like_image"
                android:clickable="false"
                android:tag="mlar"
                android:duplicateParentState="true"
                android:enabled="false" />
        </RelativeLayout>

        <View
            android:layout_width="5px"
            android:layout_height="match_parent"
            android:background="#000" />

        <RelativeLayout
            android:id="@+id/dislike"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="dislike"
            android:text="Dislike"
            android:textSize="40px" >

            <Button
                android:id="@+id/button4"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_centerInParent="true"
                android:background="@drawable/dislike_image"
                android:clickable="false"
                android:duplicateParentState="true"
                android:tag="mlar"
                android:enabled="false" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#6fff"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/senderImg"
            android:layout_width="160px"
            android:layout_height="160px"
            android:tag="mlar"
            android:layout_marginLeft="20px" />

        <Button
            android:id="@+id/button1"
            android:layout_width="5px"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:background="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginLeft="10px"
                android:gravity="center"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:singleLine="true"
                android:text="Sender Name"
                android:textColor="#000"
                android:textSize="50px" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:background="#000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95px"
                android:layout_marginLeft="10px"
                android:gravity="center"
                android:orientation="horizontal" >

                <View
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/forward"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:tag="mlar"
                    android:background="@drawable/forward"
                    android:onClick="forward" />

                <View
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/reply"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:tag="mlar"
                    android:background="@drawable/reply"
                    android:onClick="reply" />

                <View
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/close"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:tag="mlar"
                    android:background="@drawable/cross"
                    android:onClick="close" />

                <View
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/likeAnim"
        android:layout_width="500px"
        android:layout_height="500px"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <Button
        android:id="@+id/info"
        android:layout_width="140px"
        android:layout_height="80px"
        android:background="#7fff"
        android:onClick="info"
        android:layout_margin="10px"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textSize="30px"
        android:visibility="gone"
        android:text="Info" />

</RelativeLayout>