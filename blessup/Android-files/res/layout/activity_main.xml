<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_normal"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/logo"
        android:layout_width="429px"
        android:layout_height="422px"
       android:layout_centerInParent="true"
        android:layout_marginBottom="30px"
        android:textColor="#000"
        android:background="@drawable/blessup_logo"
        />

    <Button
        android:id="@+id/loginbyfacebook"
        android:layout_width="639px"
        android:layout_height="133px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30px"
        android:textColor="#000"
        android:background="@drawable/login_selecter"
        />

</RelativeLayout>
